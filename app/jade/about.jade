                                        .count 250
                                        .title Автомобилей в парке
                                .statistic-list--item
                                    .icon(style="background-image: url('images/step-num-bg.png')")
                                        img(src="images/icons/users.svg")
                                    .info
                                        .count 148
                                        .title Сотрудников в компании

