                                                img(src="images/icons/calendar.png")

                                .col-12.col-lg-6.mt-4.mt-lg-0
                                    .input-wrap
                                        .datepicker-wrap
                                            input(type="text" placeholder="Окончание аренды").input.datepicker-to
                                            .icon
                                                img(src="images/icons/calendar.png")

                            .mt-4
                                .additional-item-list
                                    label(for="additional-item").additional-item-list--item
                                        .image
                                            img(src="images/flag.png")
                                        .info
                                            .title Доставка до места
                                            .cost 600 руб.
                                        input(type="checkbox" id="additional-item")
                                        .icon
                                    label(for="additional-item-2").additional-item-list--item
                                        .image
                                            img(src="images/canister.png")
                                        .info
                                            .title Бензин 10л
                                            .cost 600 руб.
                                        .count 1 ШТ.
                                        input(type="checkbox" id="additional-item-2")
                                        .icon
                                    label(for="additional-item-3").additional-item-list--item
                                        .image
                                            img(src="images/baby-chair.png")
                                        .info
                                            .title Детское автокресло
                                            .cost 100 руб./сут.
                                        .count 1 ШТ.
                                        input(type="checkbox" id="additional-item-3")
                                        .icon
                                    label(for="additional-item-4").additional-item-list--item
                                        .image
                                            img(src="images/radar-detector.png")
                                        .info
                                            .title Радар-детектор
                                            .cost 100 руб./сут.
                                        input(type="checkbox" id="additional-item-4")
                                        .icon
                                    label(for="additional-item-5").additional-item-list--item
                                        .image
                                            img(src="images/driver.png")
                                        .info
                                            .title Второй водитель
                                            .cost 500 руб.
                                        input(type="checkbox" id="additional-item-5")
                                        .icon
                                    label(for="additional-item-6").additional-item-list--item
                                        .image
                                            img(src="images/clock.png")
                                        .info
                                            .title Ранний/поздний забор
                                            .cost 500 руб.
                                        input(type="checkbox" id="additional-item-6")
                                        .icon
                                    label(for="additional-item-7").additional-item-list--item
                                        .image
                                            img(src="images/umbrella.png")
                                        .info
                                            .title КАСКО
                                            .cost 1000 руб.
                                        input(type="checkbox" id="additional-item-7")
                                        .icon

                            .row.mt-4
                                .col-12.col-lg-6
                                    .input-wrap
                                        input(type="text" placeholder="Ваше имя").input
                                .col-12.col-lg-6.mt-4.mt-lg-0
