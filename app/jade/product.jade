                    .rent-block#rent
                        h3.semibold.title АРЕНДОВАТЬ HYUNDAI SOLARIS 2021

                        form.form.ps-0.ps-xl-2
                            .row.mt-5.pt-0.pt-lg-3
                                .col-12.col-lg-6
                                    .input-wrap
                                        .datepicker-wrap
                                            input(type="text" placeholder="Начало аренды").input.datepicker-from
