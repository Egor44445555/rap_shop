html
    title Помощь и поддержка
    include ./blocks/head.jade

    body
        include ./blocks/header-logined.jade

        .wrapper.cabinet-page
            .container-block
                .account-info.mt-5.pt-sm-4
                    .account-name
                        .image
                            img(src="images/assets/avatar.jpg")
                        .text Станислав Александровский
                        .arrow.d-block.d-xl-none
                            svg(width="12" height="5" viewBox="0 0 12 5" fill="none" xmlns="http://www.w3.org/2000/svg")
                                path(d="M0.412757 0.726379C0.640709 0.328531 1.14802 0.190803 1.54587 0.418755L6.23945 3.108C6.6373 3.33595 6.77503 3.84326 6.54708 4.24111V4.24111C6.31912 4.63896 5.81181 4.77669 5.41397 4.54873L0.720381 1.85949C0.322533 1.63154 0.184806 1.12423 0.412757 0.726379V0.726379Z" fill="black")
                                path(d="M11.2779 0.713236C11.5053 1.10714 11.3704 1.61083 10.9765 1.83825L6.26493 4.55846C5.87102 4.78588 5.36733 4.65092 5.13991 4.25701V4.25701C4.91249 3.86311 5.04745 3.35942 5.44136 3.132L10.1529 0.411789C10.5468 0.184367 11.0505 0.319329 11.2779 0.713236V0.713236Z" fill="black")

                    include ./blocks/cabinet-menu.jade

                    .account-phone-wrap
                        .label Привязанный номер

                        .d-flex.flex-wrap.align-items-center
                            a(href="tel:+7 (912) 285 38 26").phone.mt-2.me-4 +7 (912) 285 38 26
                            .btn.btn-small.btn-blue.mt-2 + ещё номер

                    .account-discount-wrap
                        .discount 20
                            span %
                        .text
                            img(src="images/card.png")
                            span Скида
                                br
                                | по карте

                .row.mt-3.pt-5.mt-xl-5
                    .col-3.d-none.d-xl-block
                        include ./blocks/cabinet-menu.jade

                    .col-12.col-xl-9
                        h1.h2.semibold Помощь и поддержка

                        form(action="").profile-form
                            .row.mt-5.pt-1.pt-xl-3
                                .col-12
                                    .input-wrap
                                        .label.mb-3.mb-lg-4 Тема сообщения
                                        input(type="password" placeholder="Обозначьте тему").input

                            .row.mt-3.mt-lg-4.pt-1.pt-lg-3
                                .col-12
                                    .input-wrap
                                        .label.mb-3.mb-lg-4 Комментарий
                                        textarea(placeholder="Напишите ваш вопрос").input

                            .row.mt-3.mt-lg-4.pt-1.pt-lg-3
                                .col-12
                                    .input-wrap
                                        .label.mb-3.mb-lg-4 Прикрепить файлы

                                        .uploader-wrap
                                            .uploader-list.js-uploader-list

                                            label(for="uploader").uploader-btn
                                                input(type="file" id="uploader" name="uploader" multiple).d-none

                            .mt-3.mt-lg-4.pt-4
                                button(type="submit").btn.btn-blue.btn-medium Отправить сообщение

                .mt-5.pt-5

        include ./blocks/footer.jade
        include ./blocks/modals.jade
        include ./blocks/scripts.jade
