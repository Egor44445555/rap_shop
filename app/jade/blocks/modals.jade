            .feedback-form
                h3.title Запрос на тестовый доступ
                    br
                    | к&nbsp;CRM-системе

                form.mt-4.mb-0
                    .input-wrap.mt-3
                        .label.gray Ваше имя
                        input(type="text").input

                    .input-wrap.mt-3
                        .label.gray Ваш телефон
                        input(type="text").input

                    .mt-4.text-center
                        button(type="submit").btn.btn-blue Отправить запрос

.modal-wrap(id="feedback" style="opacity: 0;")
    .overflow
