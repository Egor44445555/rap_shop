.car-select-block-wrap
    .container-block
        .car-select-block
            .d-block.d-xl-flex
                h2.text-uppercase Выберите автомобиль
                .city-select
                    .city-select--head
                        .text
                            span в Санкт-Петербурге
                        .arrow
                            img(src="images/icons/arrow-toggle-down.svg")
                    .city-select--body.js-custom-scroll
                        .city-select--item в Санкт-Петербурге
                        .city-select--item в Москве

            .car-type-list
                label(for="type1").car-type-list--item
                    input(type="radio" name="type" id="type1")
                    span Эконом
                label(for="type2").car-type-list--item
                    input(type="radio" name="type" id="type2" checked)
                    span Стандарт
                label(for="type3").car-type-list--item
                    input(type="radio" name="type" id="type3")
                    span Комфорт
                label(for="type4").car-type-list--item
                    input(type="radio" name="type" id="type4")
                    span Бизнес-класс
                label(for="type5").car-type-list--item
                    input(type="radio" name="type" id="type5")
                    span Внедорожники

            select(placeholder="Класс машины").custom-select
                option(value="Эконом") Эконом
                option(value="Стандарт") Стандарт
                option(value="Комфорт") Комфорт
                option(value="Бизнес-класс") Бизнес-класс
                option(value="Внедорожники") Внедорожники

            .car-select-slider
                .js-slider-car-select
                    .swiper-wrapper
                        .swiper-slide
                            .car-select-slider--item
                                .characteristics
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-user.png")
                                        .text 5 мест
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-square.png")
                                        .text 4 двери
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-automatic.png")
                                        .text Автомат
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-conditioner.png")
                                        .text Кондиционер
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-graph.png")
                                        .text 123 л.с
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-list.png")
                                        .text 6-7 л.\км.
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-check.png")
                                        .text серебро
                                    .characteristics--item
                                        img.icon(src="images/icons/characteristics-clock.png")
                                        .text 2019

                                .image
                                    h3.title.text-center Hyundai Solaris 2021

                                    .swiper-button-prev
                                    img(src="images/assets/car.jpg")
                                    .swiper-button-next

                                    .button-wrap.d-none.d-lg-flex
                                        a(href="#").btn.btn-blue.btn-empty Подробнее о машине
                                        a(href="#").btn.btn-blue.d-flex
                                            span.text Выбрать
                                            img.icon(src="images/icons/arrow-white.png")

                                .price-list
