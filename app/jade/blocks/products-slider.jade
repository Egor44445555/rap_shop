.product-slider-wrap
    .container-block
        .product-slider.js-products-slider
            .swiper-button-prev
            .swiper-button-next

            .swiper-wrapper
                .swiper-slide
                    .product-item
                        a(href="#").image
                            img(src="images/assets/product-preview.jpg")
                        .info
                            a(href="#").title Volkswagen Polo 2018 MT
                            .characteristics
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-user.png")
                                    .text 2 мест
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-square.png")
                                    .text 3 двери
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-automatic.png")
                                    .text Автомат
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-conditioner.png")
                                    .text Кондиционер
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-graph.png")
                                    .text 183 л.с
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-list.png")
                                    .text 1-7 л.\км.
                            .price
                                .label ОТ
                                .value 1.575 Р
                                    span / сутки

