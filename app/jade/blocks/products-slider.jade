.product-slider-wrap
    .container-block
        .d-block.d-xl-flex
            h2.text-uppercase.semibold Автомобили для аренды
            .city-select.ps-0.ps-xl-4.pe-0.mt-3.mt-xl-0
                .city-select--head
                    .icon
                        img(src="images/icons/cupola.png")
                    .text
                        span в Санкт-Петербурге
                    .arrow
                        img(src="images/icons/arrow-toggle-down.svg")
                .city-select--body.js-custom-scroll
                    .city-select--item в Санкт-Петербурге
                    .city-select--item в Москве

        .product-slider.js-products-slider
            .swiper-button-prev.big
            .swiper-button-next.big

            .swiper-wrapper
                .swiper-slide
                    .product-item
                        a(href="#").image
                            img(src="images/assets/product-preview.jpg")
                        .info
                            a(href="#").title Volkswagen Polo 2018 MT
                            .characteristics
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-user.png")
                                    .text 2 мест
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-square.png")
                                    .text 3 двери
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-automatic.png")
                                    .text Автомат
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-conditioner.png")
                                    .text Кондиционер
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-graph.png")
                                    .text 183 л.с
                                .characteristics--item
                                    img.icon(src="images/icons/characteristics-list.png")
                                    .text 1-7 л.\км.
                            .price
                                .label ОТ
                                .value 1.575 Р
                                    span / сутки

                            a(href="/product.html#rent").btn.btn-blue.btn-empty.btn-small Забронировать
