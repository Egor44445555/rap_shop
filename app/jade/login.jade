html
    title Авторизация
    include ./blocks/head.jade

    body
        include ./blocks/header-logined.jade

        .wrapper
            .container-block
                form.login-form
                    .h2.title Войдите или&nbsp;
                        a(href="/registration.html").border-bottom зарегистрируйтесь

                    .input-wrap.mt-4.pt-3
                        .label.mb-3.mb-lg-4 Номер телефона
                        input(type="text" placeholder="+ 7").input
                    .input-wrap.mt-4.pt-3
                        .label.mb-3.mb-lg-4 Пароль
                        .password
                            input(type="password" value="password").input
                            img(src="images/icons/eye.png")
                    .input-wrap.mt-4.pt-3.text-center
                        button(type="submit").btn.btn-blue Войти

                    .button-wrap
                        .d-md-flex.justify-content-center.mt-4.text-center
                            a(href="/password-recovery.html").link.blue
                                span Забыли пароль?

                .mt-5.pt-5

        include ./blocks/footer.jade
        include ./blocks/modals.jade
        include ./blocks/scripts.jade
