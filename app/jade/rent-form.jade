                .step-2
                    .form.ps-0.ps-xl-2
                        .row.mt-5.pt-0.pt-lg-3
                            .col-12.col-lg-6
                                .input-wrap
                                    .datepicker-wrap
                                        input(type="text" placeholder="Начало аренды").input.datepicker-from
                                        .icon
                                            img(src="images/icons/calendar.png")

                            .col-12.col-lg-6.mt-4.mt-lg-0
                                .input-wrap
                                    .datepicker-wrap
                                        input(type="text" placeholder="Окончание аренды").input.datepicker-to
                                        .icon
                                            img(src="images/icons/calendar.png")

                        .mt-4
                            .additional-item-list
                                label(for="additional-item").additional-item-list--item
                                    .image
                                        img(src="images/flag.png")
                                    .info
                                        .title Доставка до места
                                        .cost 600 руб.
                                    input(type="checkbox" id="additional-item")
                                    .icon
                                label(for="additional-item-2").additional-item-list--item
                                    .image
                                        img(src="images/canister.png")
                                    .info
                                        .title Бензин 10л
                                        .cost 600 руб.
                                    .count 1 ШТ.
                                    input(type="checkbox" id="additional-item-2")
                                    .icon
                                label(for="additional-item-3").additional-item-list--item
                                    .image
                                        img(src="images/baby-chair.png")
                                    .info
                                        .title Детское автокресло
                                        .cost 100 руб./сут.
                                    .count 1 ШТ.
                                    input(type="checkbox" id="additional-item-3")
                                    .icon
